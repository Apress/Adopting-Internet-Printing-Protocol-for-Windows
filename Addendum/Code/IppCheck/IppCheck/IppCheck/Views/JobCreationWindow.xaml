<Window x:Class="IppCheck.JobCreationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IppCheck"
        mc:Ignorable="d"
        Title="JobCreationWindow"  local:AutoBindEvents.IsAutoBindEvent="True" Height="500" Width="800">
    <Window.DataContext>
        <local:JobCreationWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Orientation="Vertical" >
            <TextBlock Text="{Binding PrinterName}" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center"/>
            <Label Content="Supported Job Attributes" Style="{StaticResource LargeLabelStyle}" HorizontalAlignment="Center"/>
        </StackPanel>
        <ListView Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="4" ItemsSource="{Binding Path=JobCreationAttributes}"
        ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Attribute" Width="auto">
                        <GridViewColumn.HeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                            </Style>
                        </GridViewColumn.HeaderContainerStyle>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Style="{StaticResource MediumTextBlockStyle}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Value" Width="auto">
                        <GridViewColumn.HeaderContainerStyle>
                            <Style TargetType="{x:Type GridViewColumnHeader}">
                                <Setter Property="HorizontalContentAlignment" Value="Left" />
                            </Style>
                        </GridViewColumn.HeaderContainerStyle>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Value}" Style="{StaticResource MediumTextBlockStyle}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Default Value" Command="{Binding PlacementTarget.DataContext.DefaultCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}"
                        CommandParameter="{Binding PlacementTarget.SelectedItem, RelativeSource={RelativeSource AncestorType=ContextMenu}}">
                        <MenuItem.Icon>
                            <Image Width="20" Height="20" Source="pack://application:,,,/Graphics/job.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>
        <StackPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2">
            <Label Content="Default Value" Style="{StaticResource MediumLabelStyle}" VerticalAlignment="Top"/>
            <TextBox  IsReadOnly="True" Text="{Binding DefaultValue}" Style="{StaticResource MediumTextBoxStyle}" Height="40" MinLines="100" HorizontalScrollBarVisibility="Auto"/>
        </StackPanel>
        <Button Grid.Row="4" Grid.Column="5" Command="{Binding ExitCommand}" ToolTip="Close Job Creation Window" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/close.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="Close" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Button>
    </Grid>
</Window>
