<Window x:Class="IppCheck.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IppCheck"
        mc:Ignorable="d"
        Title="Setup" local:AutoBindEvents.IsAutoBindEvent="True"  Height="500" Width="850" WindowStyle="None">
    <Window.DataContext>
        <local:SetupWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="Bool2Vis" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Printer File Path:"  Width="150" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBox Text="{Binding PrintersFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Width="500" Height="20" HorizontalAlignment="Center" 
                 VerticalAlignment="Center" Style="{StaticResource MediumTextBoxStyle}"/>
        <TextBlock Grid.Row="2" Grid.Column="0" Text="CSV Output File Path:"  Width="150" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBox Text="{Binding OutputFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Width="500" Height="20" HorizontalAlignment="Center" 
        VerticalAlignment="Center" Style="{StaticResource MediumTextBoxStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Test Parameters File Path:"  Width="150" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBox Text="{Binding ParamsFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Width="500" Height="20" HorizontalAlignment="Center" 
        VerticalAlignment="Center" Style="{StaticResource MediumTextBoxStyle}"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Job Attributes File Path:"  Width="150" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBox Text="{Binding JobAttributesFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Width="500" Height="20" HorizontalAlignment="Center" 
        VerticalAlignment="Center" Style="{StaticResource MediumTextBoxStyle}"/>
        <Image Source="pack://application:,,,/IppCheck;component/Graphics/mopria.png" Grid.Row="5" Grid.Column="1" Height="80" Width="80"/>
        <Image Source="pack://application:,,,/IppCheck;component/Graphics/ipp.png" Grid.Row="5" Grid.Column="3" Height="80" Width="80"/>
        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MinMopriaCert}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="4" Grid.Column="3" Text="{Binding MinIppVer}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <CheckBox IsChecked="{Binding CbOutputFile}" Content="Create CSV Results File" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center"
                   Style="{StaticResource CheckBoxStyle}"/>
        <TextBox Text="{Binding OutputFile, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Width="500" Height="20" HorizontalAlignment="Center" 
                 VerticalAlignment="Center" Style="{StaticResource MediumTextBoxStyle}" Visibility="{Binding CbOutputFile, Converter={StaticResource Bool2Vis}}"/>
        <Button Grid.Row="1" Grid.Column="4" Command="{Binding FileCommand}" ToolTip="Set IPP Printers File" Style="{StaticResource SmallButtonStyle}">
            <StackPanel>
                <Image Source="pack://application:,,,/IppCheck;component/Graphics/bluetriangle.png" Style="{StaticResource SmallButtonImageStyle}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="2" Grid.Column="4" Command="{Binding CsvFileCommand}" ToolTip="Set CSV Output File" Style="{StaticResource SmallButtonStyle}">
            <StackPanel>
                <Image Source="pack://application:,,,/IppCheck;component/Graphics/bluetriangle.png" Style="{StaticResource SmallButtonImageStyle}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="3" Grid.Column="4" Command="{Binding ParametersFileCommand}" ToolTip="Set IPP Parameters File" Style="{StaticResource SmallButtonStyle}">
            <StackPanel>
                <Image Source="pack://application:,,,/IppCheck;component/Graphics/bluetriangle.png" Style="{StaticResource SmallButtonImageStyle}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="0" Grid.Column="4" Command="{Binding InfoCommand}" ToolTip="Application Information" Style="{StaticResource SmallButtonStyle}">
            <StackPanel>
                <Image Source="pack://application:,,,/IppCheck;component/Graphics/unknown.png" Style="{StaticResource SmallButtonImageStyle}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="2" Grid.Column="4" Command="{Binding OutputFileCommand}" ToolTip="Set CSV Output file" Style="{StaticResource SmallButtonStyle}">
            <StackPanel>
                <Image Source="pack://application:,,,/IppCheck;component/Graphics/bluetriangle.png" Style="{StaticResource SmallButtonImageStyle}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="4" Grid.Column="4" Command="{Binding JobAttributesFileCommand}" ToolTip="Set Job Attributesfile" Style="{StaticResource SmallButtonStyle}">
            <StackPanel>
                <Image Source="pack://application:,,,/IppCheck;component/Graphics/bluetriangle.png" Style="{StaticResource SmallButtonImageStyle}" />
            </StackPanel>
        </Button>
        <Button Grid.Row="5" Grid.Column="5" Command="{Binding ExitCommand}" ToolTip="Save and Close Setup Window" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/close.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="Close" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Button>
        <Button Grid.Row="5" Grid.Column="0" Command="{Binding CancelCommand}" ToolTip="Cancel and Exit" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/Cancel.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="Cancel" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Button>
    </Grid>
</Window>
