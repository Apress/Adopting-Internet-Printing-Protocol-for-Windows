<Window x:Class="IppCheck.InformationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IppCheck"
        mc:Ignorable="d"
        Title="InformationWindow" local:AutoBindEvents.IsAutoBindEvent="True" Height="450" Width="800" WindowStyle="None">
    <Window.DataContext>
        <local:InformationWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Source="pack://application:,,,/IppCheck;component/Graphics/mopria.png" Grid.Row="0" Grid.Column="0" Height="80" Width="80"/>
        <Image Source="pack://application:,,,/IppCheck;component/Graphics/ipp.png" Grid.Row="0" Grid.Column="4" Height="80" Width="80"/>
        <Image Source="pack://application:,,,/IppCheck;component/Graphics/setup.png" Grid.Row="0" Grid.Column="2" Height="80" Width="80"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="IppCheck version:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding AppVersion}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="IPP Library version:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2"  Text="{Binding CsIppRequestLibVer}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Text="Development:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Text="John Marion/IPP Book" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Windows Version:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding WinVersion}" Width="300" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Text="Service Pack:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding ServicePack}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="Machine Info:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding MachineInfo}" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Text="BIOS version:" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding BiosVersion}" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Center" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Text="BIOS Release:" Width="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <TextBlock Grid.Row="3" Grid.Column="2" Text="{Binding BiosReleaseDate}" Width="100" Height="20" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                    Style="{StaticResource MediumTextBlockStyle}"/>
        <Button Grid.Row="4" Grid.Column="5" Command="{Binding ExitCommand}" ToolTip="Close Setup Window" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/close.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="Close" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Button>
    </Grid>
</Window>
