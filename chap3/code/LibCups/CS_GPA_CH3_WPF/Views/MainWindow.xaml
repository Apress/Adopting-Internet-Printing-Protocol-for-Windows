<Window x:Class="CS_GPA_CH3_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:DVC="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=DotNetProjects.DataVisualization.Toolkit"
        xmlns:local="clr-namespace:CS_GPA_CH3_WPF"
        mc:Ignorable="d"
        Title="CS_GPA_CH3_WPF" Height="550" Width="800" local:AutoBindEvents.IsAutoBindEvent="True" >
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="0" Grid.Column="0" Command="{Binding GetCommand}" ToolTip="Get Printer Attributes" Style="{StaticResource StdButtonStyle}">
        <StackPanel>
            <StackPanel>
                <Image Source="pack://application:,,,/CS_GPA_CH3_WPF;component/Graphics/printer.png" Style="{StaticResource StdButtonImageStyle}" />
                <Label Content="Get" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
            </StackPanel>
            
        </StackPanel>
        </Button>
        <Image Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Height="80" Width="80" Source="{Binding PrinterPicUri}" />
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Firmware Rev." Width="120" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Style="{StaticResource SubHeaderTextBlockStyle}"/>
        <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding Firmware}"  Width="120" Height="20" HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="WrapWithOverflow"/>
        <ListView Grid.Column="1" Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="4" ItemsSource="{Binding Path=Pmc.PrintMarkers}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Marker Property" Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" Style="{StaticResource MediumTextBlockStyle}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="High Level" Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringHighLevel}" Style="{StaticResource MediumTextBlockStyle}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Low Level" Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringLowLevel}" Style="{StaticResource MediumTextBlockStyle}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Current Level" Width="auto">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding StringLevel}" Style="{StaticResource MediumTextBlockStyle}"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Image Grid.Row="0" Grid.Column="4" Source="pack://application:,,,/CS_GPA_CH3_WPF;component/Graphics/markerlevels.png" VerticalAlignment="Center" Width="100" Height="125" HorizontalAlignment="Center"/>
        <Button Grid.Row="7" Grid.Column="0" Command="{Binding ExitCommand}" ToolTip="Close Setup Window" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/CS_GPA_CH3_WPF;component/Graphics/close.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="Close" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Button>
        <DVC:Chart Grid.Row="3" Grid.RowSpan="5" Grid.Column="1" Grid.ColumnSpan="4" Background="LightBlue" Foreground="DarkBlue" 
                   Title="Printer Consumables" LegendTitle="Marker Levels">
            <DVC:Chart.Series>
                <DVC:BarSeries Title="Current Percent"    
            ItemsSource="{Binding Path=Pmc.PrintMarkers}"  
            IndependentValueBinding="{Binding Path=Name}"
            DependentValueBinding="{Binding Path=Level}">
                </DVC:BarSeries>
            </DVC:Chart.Series>
        </DVC:Chart>
        <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Text="IPP Printer"/>
        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Printer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" TextWrapping="Wrap" 
                 VerticalAlignment="Center" Width="150"/>
    </Grid>
   
</Window>
