<Window x:Class="IppCheck.PrintersListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tl="clr-namespace:System.Diagnostics;assembly=mscorlib"
        xmlns:local="clr-namespace:IppCheck"
        mc:Ignorable="d"
        Title="Printers List Editor" local:AutoBindEvents.IsAutoBindEvent="True" Height="500" Width="800">
    <Window.DataContext>
        <local:PrintersListWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="Bool2Vis" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Row="6" Grid.Column="5" Command="{Binding ExitCommand}" ToolTip="Close Printers List Editor Window" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/close.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="Close" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom"/>
                </StackPanel>
            </StackPanel>
        </Button>
        <Button Grid.Row="6" Grid.Column="0" Command="{Binding CancelCommand}" ToolTip="Cancel and Exit" Style="{StaticResource StdButtonStyle}">
            <StackPanel>
                <StackPanel>
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/cancel.png" Style="{StaticResource StdButtonImageStyle}" />
                    <Label Content="cancel" Style="{StaticResource StdButtonImageLabel}" VerticalAlignment="Bottom" />
                </StackPanel>
            </StackPanel>
        </Button>
        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Vertical">
            <TextBlock Text="Add a New Printer" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MediumTextBlockStyle}"/>
            <StackPanel Orientation="Horizontal">
                <Button FontSize="16" FontWeight="Bold" Command="{Binding AddPrinterCommand}" ToolTip="Add New Printer to List" Style="{StaticResource SmallButtonStyle}"
                    Visibility="{Binding ShowAddButton, Converter={StaticResource Bool2Vis}}">
                    <Image Source="pack://application:,,,/IppCheck;component/Graphics/plus.png" Style="{StaticResource StdButtonImageStyle}" />
                </Button>
                <TextBox Text="{Binding NewPrinter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="300" Height="20" Style="{StaticResource MediumTextBoxStyle}"/>
            </StackPanel>
        </StackPanel>
        <ListBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Grid.RowSpan="4" ItemsSource="{Binding Printers}" SelectedItem="{Binding SelectedPrinter}"
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"  Style="{StaticResource ListBoxStyle}">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Remove Printer" Command="{Binding RemovePrinterCommand}">
                        <MenuItem.Icon>
                            <Image Width="20" Height="20" Source="pack://application:,,,/IppCheck;component/Graphics/minus.png"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
        </ListBox>
    </Grid>
</Window>
