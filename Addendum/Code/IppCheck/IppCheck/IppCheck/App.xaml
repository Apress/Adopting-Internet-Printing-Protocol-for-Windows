<Application x:Class="IppTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IppTest"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="18" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="SubHeaderTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="MediumTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="ErrorTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="Red" />
            </Style>

            <Style x:Key="SmallTextBlockStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="CanvasTextStyle" TargetType="TextBlock">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="White" />
            </Style>

            <Style x:Key="MediumTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="ErrorTextBoxStyle" TargetType="TextBox">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="Red" />
            </Style>

            <Style x:Key="SubHeaderLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Segoe UI" />
            </Style>

            <Style x:Key="RadioButtonStyle" TargetType="RadioButton">
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Segoe UI" />
            </Style>

            <Style x:Key="CanvasStyle" TargetType="Canvas">
                <Setter Property="Background" Value="#FF00AADE" />
            </Style>

            <Style x:Key="GridDisplayStyle" TargetType="Grid">
                <Setter Property="Background" Value="LightBlue" />
            </Style>

            <Style x:Key="SmallButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White" />
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="50" />
            </Style>

            <Style x:Key="SmallButtonImageStyle" TargetType="Image">
                <Setter Property="Height" Value="20" />
                <Setter Property="Width" Value="20" />
            </Style>

            <Style x:Key="SmallFillButtonImageStyle" TargetType="Image">
                <Setter Property="Height" Value="45" />
                <Setter Property="Width" Value="45" />
            </Style>

            <Style x:Key="SmallButtonImageLabel" TargetType="Label">
                <Setter Property="FontSize" Value="10" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF0D84BA" />
            </Style>

            <Style x:Key="SmallToggleButtonStyle" TargetType="ToggleButton">
                <Setter Property="Background" Value="White" />
                <Setter Property="Height" Value="50" />
                <Setter Property="Width" Value="50" />
            </Style>

            <Style x:Key="StdButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="White" />
                <Setter Property="Height" Value="60" />
                <Setter Property="Width" Value="60" />
            </Style>

            <Style x:Key="StdButtonImageStyle" TargetType="Image">
                <Setter Property="Height" Value="30" />
                <Setter Property="Width" Value="30" />
                <Setter Property="VerticalAlignment" Value="Top" />
            </Style>

            <Style x:Key="StdButtonImageLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF0D84BA" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="StdCheckBoxStyle" TargetType="CheckBox">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="StdGroupBoxStyle" TargetType="GroupBox">
                <Setter Property="FontSize" Value="14" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
            </Style>

            <Style x:Key="ButtonImageStyle" TargetType="Image">
                <Setter Property="Height" Value="70" />
                <Setter Property="Width" Value="70" />
            </Style>

            <Style x:Key="StatusBarStyle" TargetType="StatusBar">
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="Background" Value="White" />
            </Style>

            <Style x:Key="StatusBarLabel" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="LargeLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="MediumLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style>

            <Style x:Key="LargeBoldLabelStyle" TargetType="Label">
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style x:Key="ComboBoxSyle1" TargetType="ComboBox">
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="Height" Value="10" />
                <Setter Property="MinWidth" Value="150" />
            </Style>

            <Style x:Key="ListBoxStyle" TargetType="ListBox">
                <Setter Property="Foreground" Value="#FF00AADE" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontFamily" Value="Segoe UI" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
