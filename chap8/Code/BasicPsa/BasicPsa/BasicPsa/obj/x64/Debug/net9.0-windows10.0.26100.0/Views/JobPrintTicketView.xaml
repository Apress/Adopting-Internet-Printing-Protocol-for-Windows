<Page x:ConnectionId='1'
    x:Class="BasicPsa.JobPrintTicketView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ipp="using:Windows.Devices.Printers"
    xmlns:local="using:BasicPsa"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"  Orientation="Vertical">
            <TextBlock Text="Special HP Attributes" Foreground="Blue"/>
        </StackPanel>
        <CheckBox x:ConnectionId='2' Content="Edge To Edge" Grid.Row="1" Grid.Column="1"                                              />
        <CheckBox x:ConnectionId='3' Content="Enhanced Mixed Mode" Grid.Row="2" Grid.Column="1"                                                    />
        <CheckBox x:ConnectionId='4' Content="Tabbed Printing" Grid.Row="3" Grid.Column="1"                                                 />
        <StackPanel Grid.Row="4" Orientation="Horizontal">
            <Button x:ConnectionId='5' x:Name="Ok" Content="Ok" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top"                  />
            <Button x:ConnectionId='6' x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top"                      />
        </StackPanel>

    </Grid>
</Page>

