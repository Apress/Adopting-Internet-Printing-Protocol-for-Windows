<Page x:ConnectionId='1'
    x:Class="BasicPsa.DefaultSettingView"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   xmlns:local="using:BasicPsa"
   xmlns:printer="using:Windows.Graphics.Printing.PrintTicket"
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   mc:Ignorable="d"
   Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"  Grid.Column="0">
            <TextBlock Text="Print Orientation" Foreground="Blue"/>
            <ComboBox x:ConnectionId='16' x:Name="OrientationOptions"                                                                                                                 Height="30" Width="150" 
                       VerticalAlignment="Top">
                <ComboBox.ItemTemplate>
                    <DataTemplate                                       >
                        <StackPanel x:ConnectionId='18' HorizontalAlignment="Left">
                            <TextBlock x:ConnectionId='19'                             />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="0"  Grid.Column="1">
            <TextBlock Text="Print Page Resolution" Foreground="Blue"/>
            <ComboBox x:ConnectionId='12' x:Name="PageResultionOption"                                                                                                                                    Height="30" Width="150" 
                       VerticalAlignment="Top">
                <ComboBox.ItemTemplate>
                    <DataTemplate                                       >
                        <StackPanel x:ConnectionId='14' HorizontalAlignment="Left">
                            <TextBlock x:ConnectionId='15'                             />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="0"  Grid.Column="2">
            <TextBlock Text="Print Duplexing" Foreground="Blue"/>
            <ComboBox x:ConnectionId='8' x:Name="DocumentDuplexingOption"                                                                                                                                        Height="30" Width="150" 
                VerticalAlignment="Top">
                <ComboBox.ItemTemplate>
                    <DataTemplate                                       >
                        <StackPanel x:ConnectionId='10' HorizontalAlignment="Left">
                            <TextBlock x:ConnectionId='11'                             />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1"  Grid.Column="0">
            <TextBlock Text="Print Collate" Foreground="Blue"/>
            <ComboBox x:ConnectionId='4' x:Name="DocumentCollateOption"                                                                                                                                       Height="30" Width="150" 
         VerticalAlignment="Top">
                <ComboBox.ItemTemplate>
                    <DataTemplate                                       >
                        <StackPanel x:ConnectionId='6' HorizontalAlignment="Left">
                            <TextBlock x:ConnectionId='7'                             />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button x:ConnectionId='2' x:Name="Ok" Content="Ok" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Top"                  />
            <Button x:ConnectionId='3' x:Name="Cancel" Content="Cancel" HorizontalAlignment="Left" Margin="20,0,0,0" VerticalAlignment="Top"                      />
        </StackPanel>
    </Grid>
</Page>


